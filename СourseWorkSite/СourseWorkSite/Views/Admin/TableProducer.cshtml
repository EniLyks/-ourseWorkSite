@model IEnumerable<СourseWorkSite.Models.Producer>

@{
    ViewBag.Title = "Производители";
}

<h2>Таблица производителей</h2>

<p>
    @Html.ActionLink("Создать производителя", "CreateProducer")
</p>
<p></p>
@using (Html.BeginForm())
{
    <p>
        Найти по имени: @Html.TextBox("searchString")
        <input type="submit" value="Поиск" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProducerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Site)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Site)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "EditProducer", new { id = item.ProducerId })
            </td>
        </tr>
    }

</table>
